class glpkSource(AutoPackageRecipe):
    name = 'glpk'
    version = '4.40'
    buildRequires = [  ]

    def unpack(r):
        r.addArchive('mirror://gnu/%(name)s/')
        r.Environment('LIBS', '-ldl')
        r.Remove('{examples,src}/{,*}/{README,COPYING}')

    
