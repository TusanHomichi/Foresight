class Mpfr(AutoPackageRecipe):
    name = 'mpfr'
    version = '2.4.1'

    buildRequires = [ 'gmp:devel', ]

    def unpack(r):
        r.addArchive('mirror://gnu/%(name)s/')
        r.addPatch('mpfr-2.4.1-sa.patch')

    def configure(r):
        r.Configure('--disable-assert')

    def policy(r):
        r.TagSpec('info-file', '%(infodir)s/')
