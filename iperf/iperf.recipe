class Iperf(CPackageRecipe):
    name = 'iperf'
    version = '2.0.5'

    buildRequires = ['libstdc++:devel']


    def setup(r):
	r.addArchive('http://downloads.sourceforge.net/iperf/'
			'%(name)s-%(version)s.tar.gz?big_mirror=0')
        r.Configure()
        r.Make()
        r.MakeInstall()


