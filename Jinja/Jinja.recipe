class Jinja(PackageRecipe):

    name = 'Jinja'
    version = '1.2'

    buildRequires = [
        'python-setuptools:python',
        'python-hashlib:python',
        'python:devel',
        'python-simplejson:python'
    ]

    def setup(r):
        r.addArchive('http://pypi.python.org/packages/source/J/%(name)s/')
        r.PythonSetup()
